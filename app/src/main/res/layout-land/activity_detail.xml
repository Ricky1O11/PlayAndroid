<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_details">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_title_bar"
            android:orientation="horizontal"
            android:background="@color/colorAccent">
            <TextView
                android:id="@+id/tv_boardgame_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_label"
                android:fontFamily="sans-serif"
                android:padding="16dp"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"/>
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_favourite"
                android:layout_weight="5"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_title_bar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/iv_boardgame_img"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:adjustViewBounds="true"
                    android:layout_margin="16dp"/>

                <TextView
                    android:id="@+id/tv_rating"
                    android:textColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/average_rating_caption"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_alignTop="@+id/iv_boardgame_img"
                    android:layout_toRightOf="@+id/iv_boardgame_img"
                    android:layout_toEndOf="@+id/iv_boardgame_img"
                    android:layout_marginTop="16dp"
                    />
                <TextView
                    android:id="@+id/tv_boardgame_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_below="@+id/tv_rating"
                    android:layout_alignLeft="@+id/tv_rating"
                    android:layout_alignStart="@+id/tv_rating"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_rating"
                    android:layout_alignStart="@+id/tv_rating"
                    android:layout_alignBottom="@id/iv_boardgame_img"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_movie_rating"
                    android:id="@+id/ll_icons"
                    android:layout_marginTop="32dp">
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_caption"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="true"
                    android:layout_toRightOf="@+id/tv_rating"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginStart="48dp"/>
                <TextView
                    android:id="@+id/tv_boardgame_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_label"
                    android:fontFamily="sans-serif"
                    android:layout_alignLeft="@+id/tv_description"
                    android:layout_alignStart="@+id/tv_description"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_below="@+id/tv_description"
                    android:layout_marginBottom="16dp"
                    android:layout_toRightOf="@+id/tv_rating"
                    />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_height="42dp"
        android:layout_width="42dp"
        android:layout_gravity="center"
        android:visibility="invisible" />
</FrameLayout>
